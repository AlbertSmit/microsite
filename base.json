{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["dom", "ES2019"],
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ES2020",
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "skipLibCheck": true,
    "baseUrl": "../../src",
    "paths": {
      "@/*": ["./*"]
    }
  }
}
